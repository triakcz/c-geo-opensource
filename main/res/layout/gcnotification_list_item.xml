<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gcnotification_list_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dip"
    android:background="?background_color"
    android:paddingBottom="7dip"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:paddingTop="7dip"
    tools:context=".connector.gc.GCNotificationListAdapter">

    <ImageView
        android:id="@+id/notification_activated"
        android:layout_width="2dip"
        android:layout_height="30dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dip"
        android:scaleType="fitXY"
        android:src="@drawable/mark_green"
        android:gravity="left|center_vertical"
        tools:visibility="visible" />

    <CheckBox
        android:id="@+id/notification_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toRightOf="@id/notification_activated"
        android:text="@null" />

    <ProgressBar
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/loading"
        android:layout_below="@id/notification_selected" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:textColor="?text_color"
        android:textIsSelectable="false"
        android:textSize="22sp"
        android:paddingRight="5dip"
        android:layout_toRightOf="@id/notification_selected"
        tools:text="name" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:textColor="?text_color"
        android:textIsSelectable="false"
        android:textSize="10sp"
        android:paddingRight="5dip"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/notification_activated"
        tools:text="label" />

    <TextView
        android:id="@+id/notification_coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label"
        android:visibility="visible"
        android:textColor="?text_color"
        android:textIsSelectable="false"
        android:textSize="10sp" />

</RelativeLayout>
